<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ionicframework.monitorandoacidade" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Monitorando a Cidade</name>
    <description>
        Coleta de dados m√≥veis para campanhas criadas no site monitorandoacidade.org
    </description>
    <content src="index.html" />
    <access origin="*" subdomains="true"/>
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="false" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#333333" />
    <preference name="StatusBarStyle" value="blackopaque" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />

    <feature name="StatusBar">
        <param name="ios-package" value="CDVStatusBar" onload="true" />
    </feature>
    <feature name="Geolocation">
        <param name="ios-package" value="CDVLocation" />
    </feature>
    <feature name="Camera">
        <param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
    </feature>
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.InAppBrowser" />
    </feature>

    <!--     App icons -->
    <platform name="android">
      <icon src="icons/android/icon-192.png" width="192" height="192" />
      <icon src="icons/android/icon-144.png" width="144" height="144" />
      <icon src="icons/android/icon-96.png" width="96" height="96" />
      <icon src="icons/android/icon-72.png" width="72" height="72" />
      <icon src="icons/android/icon-48.png" width="48" height="48" />
    </platform>

    <platform name="ios">
      <!-- iOS 8.0+ -->
      <!-- iPhone 6 Plus  -->
      <icon src="icons/ios/Icon-60@3x.png" width="180" height="180" />
      <!-- iOS 7.0+ -->
      <!-- iPhone / iPod Touch  -->
      <icon src="icons/ios/Icon-60.png" width="60" height="60" />
      <icon src="icons/ios/Icon-60@2x.png" width="120" height="120" />
      <!-- iPad -->
      <icon src="icons/ios/Icon-76.png" width="76" height="76" />
      <icon src="icons/ios/Icon-76@2x.png" width="152" height="152" />
      <!-- iOS 6.1 -->
      <!-- Spotlight Icon -->
      <icon src="icons/ios/Icon-Spotlight-40.png" width="40" height="40" />
      <icon src="icons/ios/Icon-Spotlight-40@2x.png" width="80" height="80" />
      <!-- iPhone / iPod Touch -->
      <icon src="icons/ios/Icon.png" width="57" height="57" />
      <icon src="icons/ios/Icon@2x.png" width="114" height="114" />
      <!-- iPad -->
      <icon src="icons/ios/Icon-72.png" width="72" height="72" />
      <icon src="icons/ios/Icon-72@2x.png" width="144" height="144" />
      <!-- iPhone Spotlight and Settings Icon -->
      <icon src="icons/ios/Icon-small.png" width="29" height="29" />
      <icon src="icons/ios/Icon-small@2x.png" width="58" height="58" />
      <!-- iPad Spotlight and Settings Icon -->
      <icon src="icons/ios/Icon-Small-50.png" width="50" height="50" />
      <icon src="icons/ios/Icon-Small-50@2x.png" width="100" height="100" />
    </platform>
</widget>
